    $hover:
      opacity: 0.90
      color: green
]])

  if revokePanel and revokePanel.copyBtn then
    revokePanel.copyBtn.onClick = function()
      showUuidMacWindow()
    end
  end
end

local function destroyRevokedButton()
  if revokePanel then
    pcall(function() revokePanel:destroy() end)
  end
  revokePanel = nil
end

